[user]
    name = James Davidson
    email = jedavidson2000@gmail.com

[includeIf "gitdir:~/repos/vivcourt/"]
    path = ~/repos/vivcourt/.gitconfig-vivcourt

[init]
    defaultBranch = main

[push]
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true
    hyperlinks = true

[merge]
    conflictstyle = zdiff3

